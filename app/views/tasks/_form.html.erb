<!--パーシャル-->
<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |t| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <!--column stutasを追加したため、以下二行を追加 -->
      <div class="form-group">
        <%= t.label :content, "タスク" %>
        <%= t.text_field :content, class: 'form-control' %>
      </div>

      <div class="form-group"> 
        <%= t.label :status, "ステータス"%>
        <%= t.text_field :status, class: 'form-control' %>
      </div>
    
      <div class="form-group col-sm-offset-4 col-sm-4">
        <%= t.submit '投稿', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>